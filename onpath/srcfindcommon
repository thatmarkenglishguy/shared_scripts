# vi:syntax=bash autoindent smartindent

# Parameters:
# 1- Search directory (defaults to .)
# All other parameters passed to find

# Examples:
# Find all source files under the current directory.
# srcfind .
#set -x
seen_non_dash=0
declare -a exclude_args
exclude_args=()
declare -a pre_args
pre_args=()
declare -a post_args
post_args=()
declare -a args
args=( "${@:1}" )

raw_print=0
#for arg in "${args[@]}"
for ((i=0; i<${#args[@]}; ++i))
do
  arg="${args[${i}]}"
  #echo "Arg: '${arg}'" >&2
  case "${arg}" in
    -print0)
      raw_print=1
      ;;
    --exclude)
      (( ++i ))
      if [ ${i} -eq ${#args[@]} ]
      then
        echo "Expected argument for '${arg}'" >&2
        (( ++ok_exit_code ))
      else
        exclude_args+=( -path "${args[${i}]}" -o )
      fi
      ;;
    --exclude-dir)
      (( ++i ))
      if [ ${i} -eq ${#args[@]} ]
      then
        echo "Expected argument for '${arg}'" >&2
        (( ++ok_exit_code ))
      else
        exclude_args+=( -path "*/${args[${i}]}/*" -o )
      fi
      ;;
    -*)
      if [ ${seen_non_dash} -eq 0 ]
      then
        pre_args+=( ${arg} )
      else
        post_args+=( ${arg} )
      fi
      ;;
    *)
      if [ ${seen_non_dash} -eq 0 ]
      then
        start_directory="${arg}"
        seen_non_dash=1
      else
        post_args+=( ${arg} )
      fi
      ;;
  esac
done

if [ -z "${start_directory}" ]
then
  start_directory='.'
fi

#start_directory="${1:-.}"
#declare -a args
#args=( "${@:2}" )
