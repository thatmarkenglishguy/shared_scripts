case "${os_name}" in
  darwin)
    if [ -f $(brew --prefix)/etc/zsh_completion ]; then
      source $(brew --prefix)/etc/zsh_completion
    fi
    ;;
esac


## Kubectl completion
if command -v kubectl &>/dev/null
then
  alias k='kubectl'
  source <(kubectl completion zsh)
fi

